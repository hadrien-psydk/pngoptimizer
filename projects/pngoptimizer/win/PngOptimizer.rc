#include <winres.h>
#include "resource.h"

// Context menu
LANGUAGE LANG_ENGLISH, SUBLANG_ENGLISH_US
IDR_MENU MENU
{
    POPUP "PngOptimizer Menu"
    {
        MENUITEM "PNG options...", IDM_PNGOPTIONS
        MENUITEM SEPARATOR
        MENUITEM "Paste screenshot\tCtrl+V", IDM_PASTEFROMCLIPBOARD
        MENUITEM "Show screenshots directory", IDM_SHOWSCREENSHOTSDIRECTORY
        MENUITEM "Screenshots options...", IDM_SCREENSHOTSOPTIONS
        MENUITEM SEPARATOR
        MENUITEM "Always on top", IDM_ALWAYSONTOP
        MENUITEM "Clear list\tCtrl+Delete", IDM_CLEARLIST
        MENUITEM SEPARATOR
        MENUITEM "About PngOptimizer", IDM_ABOUT
    }
    MENUITEM SEPARATOR
}

// About dialog
LANGUAGE LANG_ENGLISH, SUBLANG_ENGLISH_US
IDD_ABOUT DIALOGEX 40, 40, 179, 109
STYLE DS_MODALFRAME | DS_SHELLFONT | WS_CAPTION | WS_POPUP | WS_SYSMENU
